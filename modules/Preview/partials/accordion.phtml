<?php
namespace Redaxscript;

$suffix = $admin ? '-admin' : '-default';
$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$setAccordionElement = new Html\Element();
$setAccordionElement->init('div', array(
	'class' => 'rs-js-set-accordion rs-set-accordion rs-set-accordion' . $suffix
));
$titleAccordionElement = new Html\Element();
$titleAccordionElement->init('h3', array(
	'class' => 'rs-js-title-accordion rs-title-accordion rs-title-accordion' . $suffix
));
$boxAccordionElement = new Html\Element();
$boxAccordionElement->init('div', array(
	'class' => 'rs-js-box-accordion rs-box-accordion rs-box-accordion' . $suffix
));
?>

<!-- accordion -->

<?php echo $titlePartialElement->text('.rs-title-accordion' . $suffix . ' + rs-box-accordion' . $suffix); ?>

<div class="rs-js-accordion rs-accordion">

	<!-- first -->

	<?php echo $setAccordionElement
		->copy()
		->addClass('rs-js-set-active rs-set-active')
		->html(
			$titleAccordionElement
				->copy()
				->addClass('rs-js-title-active rs-title-active')
				->text(Language::get('first')) .
			$boxAccordionElement
				->copy()
				->addClass('rs-js-box-active rs-box-active')
				->text(Language::get('first'))
		); ?>

	<!-- number -->

	<?php for ($i = 2; $i < 5; $i++): ?>

		<?php echo $setAccordionElement->html(
			$titleAccordionElement->text(Language::get($i, '_number')) .
			$boxAccordionElement->text(Language::get($i, '_number'))
		); ?>

	<?php endfor; ?>

	<!-- last -->

	<?php echo $setAccordionElement
		->copy()
		->addClass('rs-js-set-accordion-last rs-set-accordion-last')
		->html(
			$titleAccordionElement->text(Language::get('last')) .
			$boxAccordionElement->text(Language::get('last'))
		); ?>
</div>
