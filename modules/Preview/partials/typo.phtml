<?php
namespace Redaxscript;

$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$linkElement = new Html\Element();
$linkElement
	->init('a')
	->text(Language::get('preview', '_preview'));
$titleElement = new Html\Element();
$titleElement
	->init('h3')
	->text(Language::get('preview', '_preview'));
$linkArray = array(
	'rs-link-default',
	'rs-link-read-more'
);
$titleArray = array(
	'rs-title-content',
	'rs-title-preview-sub',
	'rs-title-comment',
	'rs-title-extra'
);
?>

<!-- several links -->

<?php foreach ($linkArray as $value): ?>

	<?php echo $titlePartialElement->text('.' . $value); ?>
	<?php echo $linkElement->copy()->addClass($value); ?>

<?php endforeach; ?>

<!-- several titles -->

<?php foreach ($titleArray as $value): ?>

	<?php echo $titlePartialElement->text('.' . $value); ?>
	<?php echo $titleElement->copy()->addClass($value); ?>

<?php endforeach; ?>
