<?php
namespace Redaxscript;

$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$clearfixElement = new Html\Element();
$clearfixElement->init('div', array(
	'class' => 'rs-clearfix'
));
$gridElement = new Html\Element();
$gridElement->init('div');
$boxElement = new Html\Element();
$boxElement->init('div', array(
	'class' => 'rs-box-preview'
));
$gridArray = array(
	array(
		'.rs-clearfix > .rs-grid',
		'',
		'rs-grid',
	),
	array(
		'.rs-clearfix > .rs-grid-space',
		'',
		'rs-grid-space',
	),
	array(
		'.rs-clearfix.line > .rs-grid',
		'rs-line',
		'rs-grid',
	),
	array(
		'.rs-clearfix.line > .rs-grid-space',
		'rs-line',
		'rs-grid-space',
	),
	array(
		'.rs-clearfix.rs-line-space > .rs-grid',
		'rs-line-space',
		'rs-grid'
	),
	array(
		'.rs-clearfix.rs-line-space > .rs-grid-space',
		'rs-line-space',
		'rs-grid-space'
	)
);
?>

<!-- grid combination -->

<?php foreach ($gridArray as $value): ?>

	<?php echo $titlePartialElement->text($value[0]); ?>

	<!-- s1o2 -->

	<?php echo $clearfixElement->addClass($value[1])->html(
		$gridElement->copy()->addClass($value[2] . ' rs-s1o2')->html($boxElement->text('s1o2')) .
		$gridElement->copy()->addClass($value[2] . ' rs-s1o2')->html($boxElement->text('s1o2'))
	); ?>

	<!-- s1o3 -->

	<?php echo $clearfixElement->addClass($value[1])->html(
		$gridElement->copy()->addClass($value[2] . ' rs-s1o3')->html($boxElement->text('s1o3')) .
		$gridElement->copy()->addClass($value[2] . ' rs-s2o3')->html($boxElement->text('s1o3'))
	); ?>

<?php endforeach; ?>

<!-- grid sizes -->

<?php echo $titlePartialElement->text('grid sizes'); ?>

<div class="rs-line rs-clearfix">

	<?php echo $gridElement->copy()->addClass('rs-grid-space rs-s1o1')->html($boxElement->text('s1o1')); ?>

</div>

<?php for ($i = 2; $i < 9; $i++): ?>

	<div class="rs-line rs-clearfix">

		<?php echo $gridElement->copy()->addClass('rs-grid-space rs-s1o' . $i)->html($boxElement->text('s1o' . $i)); ?>
		<?php echo $gridElement->copy()->addClass('rs-grid-space rs-s' . ($i - 1) . 'o' . $i)->html($boxElement->text('s' . ($i - 1) . 'o' . $i)); ?>

	</div>

<?php endfor; ?>
